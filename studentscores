    <!-- btn -->
    <div class="btn-box">
      <button id="calculator" class="btn btn-cal">គណនា</button>
      <button id="reset" class="btn btn-del">លុប</button>
    </div>
    <!-- result -->
    <div class="Result">
      <h1 id="result"></h1>
    </div>
    <script>
      let btn = document.getElementById('calculator')
      let reset = document.getElementById('reset')
      let resultt = document.getElementById('result')
      btn.addEventListener('click', function () {
        let khmer = document.getElementById('khmer').value
        let math = document.getElementById('math').value
        let phum = document.getElementById('phum').value
        let history = document.getElementById('history').value
        let selthor = document.getElementById('selthor').value
        let englist = document.getElementById('englist').value
        let pycise = document.getElementById('pycise').value
        let kimi = document.getElementById('kimi').value
        let jiveak = document.getElementById('jiveak').value
        let pendey = document.getElementById('pendey').value
        let cal =
          Number(khmer) +
          Number(math) +
          Number(phum) +
          Number(history) +
          Number(selthor) +
          Number(englist) +
          Number(pycise) +
          Number(kimi) +
          Number(jiveak) +
          Number(pendey)
        let re = cal / 10
        let grade = ''
        if (re >= 90) {
          grade = 'A'
        } else if (re >= 80) {
          grade = 'B'
        } else if (re >= 70) {
          grade = 'C'
        } else if (re >= 60) {
          grade = 'D'
        } else if (re >= 50) {
          grade = 'E'
        } else {
          grade = 'F'
        }
        resultt.innerText = ' មធ្យមភាគ ' + re + ' % | និទ្ទេស ' + grade
      })
      reset.addEventListener('click', function () {
        document.getElementById('khmer').value = ''
        document.getElementById('math').value = ''
        document.getElementById('phum').value = ''
        document.getElementById('history').value = ''
        document.getElementById('selthor').value = ''
        document.getElementById('englist').value = ''
        document.getElementById('pycise').value = ''
        document.getElementById('kimi').value = ''
        document.getElementById('jiveak').value = ''
        document.getElementById('pendey').value = ''
        resultt.innerText = ''
      })
    </script>
  </body>

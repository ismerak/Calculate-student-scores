          <input
            type="number"
            class="input"
            placeholder="អក្សរសាស្ត្រខ្មែរ"
            id="khmer"
          />
          <input type="number" class="input" placeholder="គណិត" id="math" />
          <input type="number" class="input" placeholder="ភូមិ" id="phum" />
          <input
            type="number"
            class="input"
            placeholder="ប្រវត្តិ"
            id="history"
          />
          <input
            type="number"
            class="input"
            placeholder="សីលធម៌"
            id="selthor"
          />
        </div>
        <div class="right">
          <input
            type="number"
            class="input"
            placeholder="អង់គ្លេស"
            id="englist"
          />
          <input type="number" class="input" placeholder="រូប" id="pycise" />
